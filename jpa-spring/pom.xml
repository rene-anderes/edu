            <groupId>com.jayway.jsonpath</groupId>
            <artifactId>json-path</artifactId>
            <version>0.9.1</version>
            <scope>test</scope>
        </dependency>
        <!-- Servlet 2.5 kann für Test's nicht genommen werden -->
        <!-- ClassNotFound Exception: javay/servlet/SessionCookieConfig -->
