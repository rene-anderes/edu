            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-servlet_3.0_spec</artifactId>
            <version>1.0</version>
            <scope>test</scope>
        </dependency>
        <!-- Maven kann beim compile mit der obigen Abhängigkeit aus unerfindlichen Gründen nichts anfangen -->
