            <version>1.7.2.RELEASE</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-webmvc</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
        </dependency>
        <!-- Ohne diese Abhängigkeit: java.lang.ClassNotFoundException: org.springframework.hateoas.mvc.UriComponentsContributor -->
