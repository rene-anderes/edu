<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.anderes.edu</groupId>
        <artifactId>jee.employee.server</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>jee.employee.server.application</artifactId>

    <name>JEE Employee - Server - Application-Layer</name>

    <packaging>war</packaging>

    <developers>
        <developer>
            <name>René Anderes</name>
        </developer>
    </developers>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <!-- Kein web.xml nötig 
                    <failOnMissingWebXml>false</failOnMissingWebXml> -->
                    <packagingExcludes>WEB-INF/lib/*.jar</packagingExcludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>xjc</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <arguments>-extension</arguments>
                    <schemaDirectory>${project.basedir}/src/main/resources</schemaDirectory>
                    <packageName>org.anderes.edu.employee.application.boundary.dto</packageName>
                    <bindingDirectory>${project.basedir}/src/main/resources</bindingDirectory>
                    <bindingFiles>binding.xjb</bindingFiles>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${project.build.directory}/generated-sources/jaxb</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- Projektabhägigkeiten -->
        <dependency>
            <groupId>org.anderes.edu</groupId>
            <artifactId>jee.employee.server.domain</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.anderes.edu</groupId>
            <artifactId>jee.employee.server.infrastructure</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- Bug https://java.net/jira/browse/GLASSFISH-21141 -->
        <dependency>
            <groupId>com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-jaxb-annotations</artifactId>
            <version>2.4.2</version>
        </dependency>
        <!-- RMI / JAX-RS etc. -->
        <dependency>
            <groupId>org.glassfish.main.extras</groupId>
            <artifactId>glassfish-embedded-all</artifactId>
            <scope>provided</scope>
        </dependency>
        <!-- Testabhängigkeiten -->
        <dependency>
            <groupId>org.jboss.shrinkwrap.resolver</groupId>
            <artifactId>shrinkwrap-resolver-impl-maven</artifactId>
            <scope>test</scope>
        </dependency>
         <dependency>
            <groupId>org.jboss.shrinkwrap.descriptors</groupId>
            <artifactId>shrinkwrap-descriptors-impl-javaee</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
